datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  role     Role
  posts    Post[]
}

model Post {
  id         Int      @id @default(autoincrement())
  content    String
  createdAt  DateTime @default(now())
  userId     Int
  user       User     @relation(fields: [userId], references: [id])
}

enum Role {
  BUSINESS
  ADVOCATE
}